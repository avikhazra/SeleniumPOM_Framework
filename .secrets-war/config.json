{
  "enabled": true,
  "parallel_execution": true,
  "max_parallel_jobs": 4,
  "scan_comments": true,
  "auto_open_report": true,
  "ignore_patterns": [
    "*.log",
    "*.tmp",
    "node_modules/**",
    ".git/**",
    "vendor/**",
    "target/**",
    "build/**",
    "dist/**",
    ".secrets-war/**"
  ],
  "file_extensions": [
    "*.js", "*.ts", "*.jsx", "*.tsx",
    "*.py", "*.java", "*.c", "*.cpp", "*.h",
    "*.php", "*.rb", "*.go", "*.rs", "*.swift",
    "*.kt", "*.scala", "*.cs", "*.vb",
    "*.html", "*.css", "*.scss", "*.less",
    "*.xml", "*.json", "*.yaml", "*.yml",
    "*.properties", "*.env", "*.config",
    "*.sh", "*.bash", "*.zsh", "*.fish",
    "*.sql", "*.r", "*.m", "*.pl", "*.lua"
  ],
  "max_file_size": "1MB"
}
